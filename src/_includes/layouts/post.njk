{% extends "layouts/default.njk" %}

{% block content %}
<article class="post-detail">
  <header class="post-detail__header">
    <div class="post-date post-detail__date">{{ date | monthAndYear }}</div>
    <h1>{{ title }}</h1>
  </header>
  {{ content | safe }}
  <footer>
    Post footer
  </footer>
</article>
{% endblock content %}
