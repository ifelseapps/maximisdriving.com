{% extends "layouts/default.njk" %}

{% block aside_left %}
<div class="side-block-wrapper side-block-wrapper_scrollable">
  <div class="side-block-wrapper__inner">
    <section class="side-block side-block-wrapper__item">
      <div class="side-block__main">
        <h3 class="side-block__title">Поездки</h3>
        <ol class="side-list">
          {% for post in collections.travels_random %}
            {% if post.url !== page.url %}
              <li class="side-list-item side-list__item">
                <div class="date side-list-item__date">{{ post.data.date | monthAndYear }}</div>
                <a href="{{ post.url  | url}}">
                  {{ post.data.title }}
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ol>
      </div>
    </section>
    <section class="side-block side-block-wrapper__item">
      <div class="side-block__main">
        <h3 class="side-block__title">Ближайшие поездки</h3>
        <ol class="side-list">
          <li class="side-list-item side-list__item">
            <div class="date date_future side-list-item__date">
              20.07.2024 — 03.08.2024
            </div>
            <div>
              Ярославль — Грозный — Избербаш
            </div>
          </li>
          <li class="side-list-item side-list__item">
            <div class="date date_future side-list-item__date">
              08.08.2024 — 12.08.2024
            </div>
            <div>
              Ярославль — Кемь — о.Соловетский
            </div>
          </li>
        </ol>
      </div>
      <p class="side-block__desc">Хотите поехать с нами? <a href="/join/">Присоединяйтесь!</a></p>
    </section>
  </div>
</div>
{% endblock aside_left %}

{% block aside_right %}
<div class="side-block-wrapper side-block-wrapper_scrollable">
  <div class="side-block-wrapper__inner">
      <div class="side-block side-block-wrapper__item">
        <div class="side-block__main">
          <h3 class="side-block__title">Что еще посмотреть?</h3>
          <ol class="side-list">
            {% if route_link %}
              <li class="side-list-item side-list__item">
                <a href="{{ route_link }}">Маршрут поездки</a>
              </li>
            {% endif %}
            <li class="side-list-item side-list__item">
              <a href="/oneday/">Идеи для однодневных поездок из Ярославля</a>
            </li>
          </ol>
        </div>
      </div>
    <div class="side-block side-block-wrapper__item">
      <div class="side-block__desc">
        {% include 'socials.njk' %}
      </div>
    </div>
  </div>
</div>
{% endblock aside_right %}

{% block breadcrumbs %}
<div class="page__breadcrumbs">
  <ul class="breadcrumbs">
    <li class="breadcrumbs__item">
      <a class="breadcrumbs__link" href="/">Главная страница</a>
    </li>
    <li class="breadcrumbs__item">
      <a class="breadcrumbs__link" href="/travels/">Поездки</a>
    </li>
    <li class="breadcrumbs__item">
      {{ title }}
    </li>
  </ul>
</div>
{% endblock breadcrumbs %}

{% block content %}
<div class="post">
  <div class="date post__date">{{ date | monthAndYear }}</div>
  <h1 class="h h_lvl_1">{{ title }}</h1>
  {{ content | safe }}
  {%if related.length > 0 %}
    <div class="post__related">
      <h2 class="h h_lvl_1">Куда еще съездить?</h2>
      <ol class="posts-list">
        {% for post in related %}
          <li class="post-item">
            <a class="post-item__link" href="{{ post.url | url }}">
              <div class="post-item__top">
                {% image_background post.data.cover, 'post-item__picture' %}
                <div class="post-item__meta">
                  <span class="post-type post-type_travel">Отчет</span>
                  {% if post.data.date %}
                    <div class="post-item__additional">
                      <span class="post-additional">{{ post.data.date | monthAndYear }} г.</span>
                    </div>
                  {% endif %}
                </div>
              </div>
              <div class="post-item__title">
                {{ post.data.title }}
              </div>
            </a>
          </li>
        {% endfor %}
      </ol>
    </div>
  {% endif %}
</div>

{% endblock content %}
